{
  "version": 2,
  "builds": [
    {
      "src": "frontend/bridgesec-fe/bridgesec-web/package.json",
      "use": "@vercel/react",
      "config": {
        "distDir": "/frontend/bridgesec-fe/bridgesec-web/build" 
      }
    },
    {
      "src": "backend/bridgesec-be/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/backend/bridge-be/(.*)",
      "dest": "/backend/bridgesec-be/server.js" 
    },
    {
      "src": "/(.*)", 
      "dest": "/frontend/bridgesec-fe/bridgesec-web/build/$1" 
    }
  ]
}
